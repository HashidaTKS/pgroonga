require_relative "../pgroonga-package-task"

class PostgreSQL12PGDGPGroongaPackageTask < VersionedPGroongaPackageTask
  def initialize
    super("12", "-pgdg")
  end

  def apt_targets_default
    [
      "debian-buster",
      "debian-buster-arm64",
      "debian-bullseye",
      "debian-bullseye-arm64",
      "ubuntu-bionic",
      "ubuntu-bionic-arm64",
      "ubuntu-focal",
      "ubuntu-focal-arm64",
      "ubuntu-groovy",
      # "ubuntu-groovy-arm64",
    ]
  end

  def enable_ubuntu?
    false
  end

  def yum_targets_default
    [
      "centos-7",
      "centos-8",
    ]
  end
end

task = PostgreSQL12PGDGPGroongaPackageTask.new
task.define
