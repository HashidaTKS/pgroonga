require_relative "../pgroonga-package-task"

class PostgreSQL12PGroongaPackageTask < PGroongaPackageTask
  def initialize
    super("12")
  end

  def apt_targets_default
    [
      "debian-buster",
      "debian-buster-i386",
    ]
  end

  def yum_targets_default
    [
      "centos-6",
      "centos-7",
      "centos-8",
    ]
  end
end

task = PostgreSQL12PGroongaPackageTask.new
task.define
